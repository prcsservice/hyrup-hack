rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return request.auth.uid == uid;
    }
    
    // Hardcoded Admin email check for critical security
    function isAdmin() {
      return request.auth.token.email == "info.hyrup@gmail.com";
    }
    
    // Check if user has judge role in their user doc
    function isJudge() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "judge";
    }

    // --- Collection Rules ---

    // 1. Users: Users can read/write their own profile. Admins and Judges can read all.
    // Team leaders can update teamId field when accepting join requests.
    // Team members can read each other's profiles.
    match /users/{userId} {
      // Allow read for: self, admin, judge, or any authenticated user (simplified for team member access)
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && (
        isOwner(userId) || 
        isAdmin() ||
        // Allow team leaders to update another user's teamId when accepting join requests
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['teamId']))
      );
    }

    // 2. Teams: 
    // - Create: Authenticated users
    // - Read: Public (or just authenticated) for directory
    // - Update: Team members only
    match /teams/{teamId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      // Complex rule: check if auth.uid is in resource.data.members list would be ideal, 
      // but for MVP allow write if authenticated (or add member check)
      allow write: if isAuthenticated(); 
    }

    // 2.5 Join Requests
    match /joinRequests/{requestId} {
      // Authenticated users can create requests
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      // Team leaders and the requester can read requests
      allow read: if isAuthenticated(); // Simplified for MVP, or stricter: data.userId == auth.uidOrIsTeamLeader
      // Allow updates (e.g. status changes)
      allow write: if isAuthenticated();
    }

    // 3. Submissions (Ideas/Prototypes):
    // Inside Team doc or separate? We use fields inside Team doc, so covered above.

    // 4. Judge Invites: STRICT ADMIN ONLY
    match /judgeInvites/{inviteId} {
        allow read, write: if isAdmin();
    }
    
    // 5. Scores: Judges can write, Admins can read
    match /scores/{scoreId} {
        allow read: if isAdmin() || (isJudge() && resource.data.judgeId == request.auth.uid);
        allow write: if isJudge(); 
    }

    // 6. Notifications: Admin write, Public read
    match /notifications/{notifId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // 7. Content (CMS): Admin write, Public read
    match /content/{docId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // 8. Settings: Admin write, Authenticated read
    match /settings/{docId} {
        allow read: if isAuthenticated();
        allow write: if isAdmin();
    }

    // 9. Activities (Public Activity Feed)
    match /activities/{activityId} {
        // Anyone can read activities (public feed)
        allow read: if true;
        
        // Only authenticated users can create
        allow create: if isAuthenticated();
        
        // Immutable - no updates or deletes
        allow update, delete: if false;
    }

    // 10. Team Messages (Team Chat)
    match /teams/{teamId}/messages/{messageId} {
        // Only team members can read messages
        allow read: if isAuthenticated() && 
            request.auth.uid in get(/databases/$(database)/documents/teams/$(teamId)).data.members;
        
        // Only team members can create messages (must be sender)
        allow create: if isAuthenticated() && 
            request.auth.uid in get(/databases/$(database)/documents/teams/$(teamId)).data.members &&
            request.resource.data.senderId == request.auth.uid;
        
        // No updates or deletes
        allow update, delete: if false;
    }

    // 11. Rate Limits
    match /rateLimits/{limitId} {
        allow read, write: if isAuthenticated();
    }

    // 12. Referrals
    match /referrals/{referralId} {
        allow read: if true;
        allow create, update: if isAuthenticated();
        allow delete: if false;
    }

    // 13. Admin Emails (for dynamic admin check)
    match /adminEmails/{emailId} {
        allow read: if isAuthenticated();
        allow write: if false; // Managed via Console only
    }
  }
}
